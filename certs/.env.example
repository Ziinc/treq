# Treq Code Signing and Notarization Configuration
# This is a template file. Copy to .env.prod and fill in your actual values.

# Certificate password (from exporting .p12 in Keychain Access)
export APPLE_CERTIFICATE_PASSWORD="your-p12-password"

# Signing identity (extract with: security find-identity -v -p codesigning)
export APPLE_SIGNING_IDENTITY="Developer ID Application: Your Name (TEAM12345)"

# ===== Choose ONE notarization method below =====

# Method 1: App Store Connect API (RECOMMENDED)
# Create API key at: https://appstoreconnect.apple.com/access/integrations/api
export APPLE_API_ISSUER="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
export APPLE_API_KEY="XXXXXXXXXX"
export APPLE_API_KEY_PATH="/full/path/to/AuthKey_XXXXXXXXXX.p8"

# Method 2: Apple ID (alternative)
# Generate app-specific password at: https://appleid.apple.com
# export APPLE_ID="your@email.com"
# export APPLE_PASSWORD="xxxx-xxxx-xxxx-xxxx"
# export APPLE_TEAM_ID="TEAM12345"
